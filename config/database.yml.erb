
base: &base
  adapter: sqlite3
  timeout: 5000

development:
  adapter: postgresql
  host: localhost
  database: #{application}_development
  username: #{application}
  password: #{Capistrano::CLI.ui.ask("Enter development database password: ")}
  pool: 5
  timeout: 5000
  encoding: utf8
  reconnect: false
    
test: &test
  adapter: postgresql
  database: #{application}_test
  username: #{application}
  password: #{Capistrano::CLI.ui.ask("Enter test database password: ")}
  pool: 5
  timeout: 5000
  encoding: utf8
  reconnect: false

private:
  database: db/private.sqlite3
  <<: *base

# This is used for pwpush.com
production:
  adapter: postgresql
  database: #{application}_production 
  username: pusher
  password: #{Capistrano::CLI.ui.ask("Enter pwpush.com production database password: ")}
  pool: 5
  timeout: 5000
  encoding: utf8
  reconnect: false

cucumber:
  <<: *test
