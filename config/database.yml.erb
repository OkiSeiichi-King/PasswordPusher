
base: &base
  adapter: sqlite3
  timeout: 5000

development:
  database: db/development.sqlite3
  <<: *base

test: &test
  database: db/test.sqlite3
  <<: *base

private:
  database: db/private.sqlite3
  <<: *base

# This is used for pwpush.com
production:
  adapter: postgresql
  database: #{application}_production 
  username: pusher
  password: #{Capistrano::CLI.ui.ask("Enter production database password: ")}
  pool: 5
  timeout: 5000
  encoding: utf8
  reconnect: false

cucumber:
  <<: *test
